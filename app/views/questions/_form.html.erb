<% if question.errors.any? %>
  <div class="mt">
    <% question.errors.full_messages.each do |message| %>
      <p class="mb-sm text-red"><%= message %></p>
    <% end%>
  </div>
<% end%>

<%= form_with model: question do |form| %>
  <p class="title-md"><%= form.label :body, 'Ask your question!' %></p>
  <p><%= form.text_area :body, class: "form-text-area" %></p>
  <p class="title-md"><%= form.label :user_id, 'To user'%></p>
  <p><%= form.text_field :user_id, class: "form-text-field" %></p>
  <p><%= form.submit 'Save', class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %></p>
<% end %>